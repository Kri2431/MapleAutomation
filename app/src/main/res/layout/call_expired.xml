<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:background="@drawable/backgroundbox"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:src="@drawable/bk"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/srNo"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="1"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView6" />

                </androidx.constraintlayout.widget.ConstraintLayout>







                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:background="@drawable/issuebox"
                        android:layout_margin="2dp"
                        android:id="@+id/la"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="  User Name "
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />

                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold"
                            android:text=" : "/>
                        <TextView
                            android:textSize="10sp"
                            android:id="@+id/uName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:lines="1"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <!--<View
                        android:background="@color/pinkColor"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>-->

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:background="@drawable/issuebox"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="     Date      "
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />
                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold"
                            android:text=" : "/>
                        <TextView
                            android:textSize="10sp"
                            android:id="@+id/date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:background="@drawable/issuebox"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView

                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="    Issue Id     "
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />
                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold"
                            android:text=" : "/>
                        <TextView
                            android:textSize="10sp"
                            android:id="@+id/uIId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- <View
                         android:background="@color/pinkColor"
                         android:layout_width="1dp"
                         android:layout_height="match_parent"/>-->

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:background="@drawable/issuebox"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        tools:ignore="MissingConstraints">
                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="  Asset No "
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />
                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold"
                            android:text=" : "/>
                        <TextView
                            android:textSize="10sp"
                            android:id="@+id/aNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lines="1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/pinkColor"
                            android:textStyle="bold" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="gone"
                        android:textColor="#9c230b"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/tIn"
                        android:padding="7dp"
                        android:textSize="15sp"
                        android:text="Call Expired Time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:visibility="gone"
                        android:textColor="#9c230b"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/tUp"
                        android:padding="7dp"
                        android:textSize="15sp"
                        android:text="Time Up! "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/countDownView"
                        android:padding="7dp"
                        app:suffixTextColor="#9c230b"
                        app:timeTextColor="@color/white"
                        app:timeBgColor="#9c230b"
                        app:timeTextSize="15dp"
                        app:suffixTextSize="12dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:suffixGravity="bottom"
                        app:isHideTimeBackground="false"
                        app:isShowDay="true"
                        app:isShowMinute="true"
                        app:isShowHour="true"
                        app:isShowSecond="true"
                        app:suffixHour="h"
                        app:suffixMinute="m"
                        app:suffixSecond="s"
                        app:suffixDay="d"/>

                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>